<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gui.GameModeFragment"
    android:layout_gravity="center"
    android:background="@color/grey">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/two_btn_gm"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="@string/two_dice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/three_btn_gm"/>

    <Button
        android:id="@+id/three_btn_gm"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text="@string/three_dice"
        app:layout_constraintTop_toBottomOf="@id/two_btn_gm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>